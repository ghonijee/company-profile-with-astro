---
import ButtonFillPrimay from '../components/ButtonFillPrimay.astro';
import Icon from 'astro-icon';
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="bg-white text-gray-800" >
			<!-- Header Navigation -->
			<header class="absolute inset-x-0 top-0 z-50  md:fixed bg-white shadow-sm">
				<nav class="flex items-center justify-between p-6 lg:px-24 container mx-auto" aria-label="Global">
				  <div class="flex lg:flex-1">
					<a href="/" class="-m-1.5 p-1.5 text-2xl font-bold text-orange-500">
					  <span class="sr-only">Loqomind</span>
					  LOQOMIND
					</a>

					
				  </div>
				  <div class="flex lg:hidden">
					<button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
					  <span class="sr-only">Open main menu</span>
					  <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
						<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
					  </svg>
					</button>
				  </div>
				  <div class="hidden lg:flex lg:gap-x-8 items-center">
					<a href="/" class="text-sm font-semibold leading-6 text-gray-800 hover:text-orange-500">Home</a>
					<!-- <a href="#" class="text-sm font-semibold leading-6 text-gray-800 hover:text-orange-500">Our Works</a> -->
					<a href="/blogs" class="text-sm font-semibold leading-6 text-gray-800 hover:text-orange-500">Blogs</a>
					<a href="#" class="text-sm font-semibold leading-6"><ButtonFillPrimay label='Contact Us' /></a>
				  </div>
				 
				</nav>
				<!-- Mobile menu, show/hide based on menu open state. -->
				<div class="md:hidden" role="dialog" aria-modal="true">
				  <!-- Background backdrop, show/hide based on slide-over state. -->
				  <div class="fixed inset-0 z-50"></div>
				  <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
					<div class="flex items-center justify-between">
					  <a href="#" class="-m-1.5 p-1.5">
						<span class="sr-only">Your Company</span>
						
					  </a>
					  <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700">
						<span class="sr-only">Close menu</span>
						<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
						  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
						</svg>
					  </button>
					</div>
					<div class="mt-6 flow-root">
					  <div class="-my-6 divide-y divide-gray-500/10">
						<div class="space-y-2 py-6">
						  <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Product</a>
						  <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Features</a>
						  <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Marketplace</a>
						  <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Company</a>
						</div>
						<div class="py-6">
						  <a href="#" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Log in</a>
						</div>
					  </div>
					</div>
				  </div>
				</div>
			</header>
			  

			  <!-- Content -->
			<slot />

			  <!-- CTA Contacn Us -->
			<div class="mt-40 py-12 flex justify-center bg-amber-100">
				<div class="text-center">
					<h1 class="text-lg mb-2">Have an exciting project or want to start a conversation? </h1>
					<ButtonFillPrimay label="Get in touch with us now!" />
				</div>
			</div>
			<!-- Footer -->
			<div class="h-80 bg-orange-600 px-20 py-20 text-white flex justify-between">
				<div class="w-1/3">
					<h1 class="text-2xl font-bold mb-6">“A great product is solve a problem & has a meaningful impact“</h1>
					<h1 class="text-xl font-bold">LOQOMIND TECHNOLOGY</h1>
					<p>©2023</p>
				</div>
				<div class="w-1/3 flex gap-x-16">
					<div class="flex flex-col gap-y-4">
						<h1 class="font-semibold ">Our Menus</h1>
						<p>Home</p>
						<!-- <p>Projects</p> -->
						<p>Blogs</p>
						<p>Contact Us</p>
					</div>
					<div class="flex flex-col gap-y-4">
						<h1 class="font-semibold ">Follow Us</h1>
						<a class="inline-block inline-flex items-center" > <Icon class="h-5 mr-2" name="mdi:github"/><p>Github</p></a>
					 <a class="inline-block inline-flex items-center" > <Icon class="h-5 mr-2" name="mdi:instagram"/> <p>Instagram</p></a>	
					 <a class="inline-block inline-flex items-center" > <Icon class="h-5 mr-2" name="mdi:twitter"/><p>Twitter</p></a>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>

